LIBNAME = Utilities

VQMC_BUILD_DIR = @BUILD_DIR@

include ../../Makefile.common


SOURCES = $(shell ls $(VQMC_BUILD_DIR)/src/$(LIBNAME)/*.cpp | sed "s|$(VQMC_BUILD_DIR)/src/$(LIBNAME)/||g")
OBJECTS = $(SOURCES:.cpp=.o)

# LD flags
SHLIBFLAGS = -shared
SHLIBFLAGS += -m32 

.PHONY: all clean lib

all: $(OBJECTS) lib

lib:
	@echo $(OBJECTS)
	$(CXX) $(SHLIBFLAGS) -o libVQMC$(LIBNAME).so $(OBJECTS)


clean:
	$(shell rm *.o *.d)

-include $(OBJECTS:.o=.d)
